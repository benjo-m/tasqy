<div class="flex justify-between gap-30">
  <div class="bg-red-200 flex-1">
    <h1 class="font-bold text-2xl border-slate-600 mb-4">Offers</h1>
    <div>
      <% @offers.each do |offer| %>
        <div class="bg-gray-100 rounded-md p-2 mb-4">
          <p><strong>Task:</strong> <%= link_to offer.task.title, offer.task, class: "underline" %></p>
          <p><strong>Status:</strong> <%= offer.status.capitalize %></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="bg-blue-200 flex-1">
    <h1 class="font-bold text-2xl border-slate-600 mb-4">Schedule</h1>
  </div>
  <div class="bg-amber-200 flex-1">div3</div>
</div>