<% content_for :title, "Tasqy - Profile" %>
<h1>My Profile</h1>
<p><%= @user.username %></p>
<br>
<br>
<h1>My Tasks</h1>
<% @user.tasks.each do |task|%>
  <div class="bg-amber-100 mb-4 p-3 rounded-md inline-block">
    <p><strong>Title:</strong> <%= task.title %> </p>
    <p><strong>Posted at:</strong> <%= task.created_at.to_fs(:long) %> </p>
    <%= link_to "View details", my_task_path(task), class: "bg-gray-300 p-1 mt-1 inline-block rounded-md" %>
  </div>
  <br>
<% end %>