<% content_for :title, "TinkerPal - Profile" %>
<%# ----------Profile Info--------- %>
<div class="flex justify-between gap-30">
  <div class="flex flex-col flex-1 gap-4 min-w-fit">
    <div>
      <p><strong>Username</strong></p>
      <%= @user.username %>
    </div>
    <div>
      <p><strong>Email</strong></p>
      <%= @user.email_address %>
    </div>
  </div>
  <%# ----------Task Cards--------- %>
  <div class="flex flex-col flex-2 min-w-fit">
    <div class="flex justify-around mb-4">
      <%= link_to "Active tasks", profile_path(tasks: "active"), class: "#{params[:tasks] != 'completed' ? 'bg-gray-200 rounded-md font-bold text-red-500' : 'font-bold'} px-2 py-1" %>
      <%= link_to "Completed tasks", profile_path(tasks: "completed"), class: "#{params[:tasks] == 'completed' ? 'bg-gray-200 rounded-md font-bold text-red-500' : 'font-bold'} px-2 py-1" %>
    </div>
    <% if @tasks.any? %>
      <% @tasks.order(created_at: :desc).each do |task|%>
        <%= render "tasks/my_task_card", task: task %>
      <% end %>
      <%== pagy_nav(@pagy) %>
    <% else %>
      <p class="text-xl text-gray-400 text-center mt-4">You do not have any <%= params[:tasks] == "completed" ? "completed" : "active" %> tasks</p>
    <% end %>
  </div>
  <%# ----------New Task Button--------- %>
  <div class="flex flex-1 justify-end min-w-fit">
    <div class="flex flex-1 justify-end min-w-fit">
      <%= link_to "Create task", new_task_path, class: "bg-green-300 h-fit p-1 pl-2 pr-2 rounded-md" %>
    </div>
  </div>
</div>