<div class="mb-4 p-3 rounded-md border-2 border-gray-300">
  <div class="flex justify-between">
    <p><strong>Title:</strong> <%= truncate(task.title, length: 40) %></p>
    <div class="flex gap-1">
      <%= image_tag("location.png", size: "24x2") %>
      <%= task.city.name %>
    </div>
  </div>
  <p><strong>Posted:</strong> <%= time_ago_in_words(task.created_at) %> ago</p>
  <div class="flex gap-2 align-middle justify-end">
    <%= link_to "View details", task, class: "bg-gray-200 p-1 mt-1 inline-block rounded-md" %>
    <%= link_to "Edit", edit_task_path(task), class: "bg-blue-200 p-1 mt-1 inline-block rounded-md" %>
    <%= button_to "Delete", task, method: :delete, data: { turbo_confirm: "Are u sure?" }, class: "bg-red-300 p-1 mt-1 rounded-md" %>
  </div>
</div>
