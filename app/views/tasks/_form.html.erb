<%= form_with(model: task) do |form| %>
  <div class="mt-6">
    <%= form.label :title, class: "block" %>
    <%= form.text_field :title, class: "bg-gray-100 rounded-md p-1" %>
    <p class="text-red-500"><%= task.errors.full_messages_for(:title).first %></p>
  </div>
  <div class="mt-2" >
    <%= form.label :description, class: "block" %>
    <%= form.text_field :description, class: "bg-gray-100 rounded-md p-1" %>
    <p class="text-red-500"><%= task.errors.full_messages_for(:description).first %></p>
  </div>
  <div class="mt-6 bg-green-300 inline-block p-1 rounded-md cursor-pointer">
    <%= form.submit %>
  </div>
<% end %>
