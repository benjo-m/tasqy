<div id="<%= dom_id task %>">
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>
  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>
  <p>
    <strong>Posted at:</strong>
    <%= task.created_at.to_fs(:long) %>
  </p>
  <p>
    <strong>Posted by:</strong>
    <%= link_to task.user.username, task.user %>
  </p>
  <div class="flex gap-2 mt-2">
    <%= link_to "Back", :back, class: "bg-gray-300 p-1 min-w-15 rounded-md text-center inline-block" %>
    <%= link_to "Edit", edit_task_path(task), class: "bg-blue-300 p-1 min-w-15 rounded-md text-center" if task.user == Current.user %>
    <%= button_to "Delete", task_path, method: :delete, class: "bg-red-300 p-1 min-w-15 rounded-md text-center" if task.user == Current.user %>
  </div>
</div>
